<%- include("header")  -%> 

<div class="container">
    <div class="row">

 <!-- FORMULARIO PARA INGRESAR ACTIVIDADES -->

        <div class="col-md-4">
            <div class="card">
                <h1>Ingreso de actividades</h1>
                <div class="card-body">
                    <form action="/agregarActividad" method="POST">
                        <div class="form-group">
                            <input type="text" id="Titulo" name="Titulo"  placeholder="Ingrese el titulo de la actividad" class="form-control mb-4">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control mb-4" id="descripcion" name="descripcion" placeholder="Ingrese la descripcion de la actividad"  ></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block"> Agregar Actividad</button>
                    </form>
                </div>
            </div>
        </div>



<!-- TABLA DE ACTIVIDADES -->

        <div class="col-md-8">
            <table class="table table-bordered table-hover">
            
            <thead>
                <tr>
                    <th>Numero Identificacion</th>
                    <th>Titulo</th>
                    <th>Descripcion</th>
                    <th>Metodos</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i=0;i<tareas.length;i++ ){  %> 
                    <tr>
                        <td><%= i+1 %> </td>
                        <td><%= tareas[i].Titulo %> </td>
                        <td><%=tareas[i].descripcion  %> </td>
                        <td >
                         <a href="/cambiarEstado/<%=tareas[i]._id %> " class="btn <%= tareas[i].estado ? 'btn-success' : 'btn-dark'%>  ">Realizado</a>
                         <a href="/eliminar/<%=tareas[i]._id %>" class="btn btn-danger">Eliminar</a>
                         <a href="/editar/<%=tareas[i]._id %>" class="btn btn-info">Editar</a>
                        </td>
                    </tr>
                
            <% } %> 
               
            </tbody>
        </table>
        </div>

    </div>
</div>





<%- include("footer")  -%> 
    
